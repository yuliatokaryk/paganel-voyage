<div class="planner-container p-10">
  <div class="w-full md:w-1/2 lg:w-1/3 text-center">
    <div class="mb-20">
      <h1 class="text-4xl font-semibold second-heading mb-10">Have any journey idea?</h1>
      <%= form_with do |form| %>
        <%= form.label "I want to go to:", class:"block description text-xl font-bold mb-2" %>
        <%= form.text_field :place, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none" %>
        <%= form.submit "Go!", class: "main-button rounded-lg text-lg px-3 py-2 font-bold focus:outline-none" %>
      <% end %> 
    </div>

    <div>
      <h1 class="text-4xl font-semibold second-heading">Don't know where to go next? Let Paganel help you!</h1>
      <div class="my-10">
        <div class="globe-container">
          <div class="globe">
            <div class="globe-sphere"></div>
            <div class="globe-outer-shadow"></div>
            <div class="globe-worldmap">
              <div class="globe-worldmap-back"></div>
              <div class="globe-worldmap-front"></div>
            </div>
            <div class="globe-inner-shadow"></div>
          </div>
        </div>
      </div>
      <button class="main-button rounded-lg text-lg px-5 py-3 font-bold focus:outline-none">Paganel journey idea</button>
    </div>

  </div>
</div>
